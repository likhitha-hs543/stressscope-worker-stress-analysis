# Worker Stress Analysis System - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# SECURITY
# ============================================================================
# IMPORTANT: Change this to a strong random secret key in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-CHANGE-THIS-IN-PRODUCTION

# ============================================================================
# DATABASE
# ============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///stress_analysis.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost/stress_analysis

# ============================================================================
# FLASK SERVER
# ============================================================================
DEBUG=True
HOST=127.0.0.1
PORT=5000

# ============================================================================
# MODEL PATHS
# ============================================================================
FACIAL_MODEL_PATH=models/trained/facial_emotion_model.h5
SPEECH_MODEL_PATH=models/trained/speech_stress_model.pkl

# ============================================================================
# PRIVACY SETTINGS
# ============================================================================
# Never store raw video/audio for privacy
STORE_RAW_VIDEO=False
STORE_RAW_AUDIO=False

# Data retention period (days)
DATA_RETENTION_DAYS=90

# Anonymization threshold (minimum team size for aggregated stats)
ANONYMIZATION_THRESHOLD=3

# ============================================================================
# REAL-TIME PROCESSING
# ============================================================================
# Analysis interval in seconds (how often to analyze frames)
PROCESSING_INTERVAL=2

# Target latency in seconds
TARGET_LATENCY=5

# ============================================================================
# STRESS DETECTION THRESHOLDS
# ============================================================================
# High stress duration limit in seconds before alert
HIGH_STRESS_DURATION_THRESHOLD=300

# Alert cooldown period in seconds
ALERT_COOLDOWN=1800

# ============================================================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================================================
# Email notifications (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=manager@company.com
